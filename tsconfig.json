{
    "compilerOptions": {
        "target": "ES5",
        "module": "ESNext",
        "declaration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "jsx": "react-jsx",
        "moduleResolution": "Node",
        "rootDir": "src",
        "outDir": "./dist",
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/lib/core/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
